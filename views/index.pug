extends layout

block content
  //title container
  .container.mt-5
    .row.d-inline.pt-5
      .col.d-flex.justify-content-center.mt-5
        h2.Cinzel-Decorative-font.display-3.text-white.section-title Grandes Novelas de
      .col.d-flex.justify-content-center
        h1(data-heading='Aventuras').Cinzel-Decorative-font.display-1.main-title Aventuras
  //book grids
  .container-xl.m-5
    - var books = list
    .row
      each book in books
        .col.col-xl-6.col-lg-6.col-md-12.col-sm-12.d-flex.align-items-stretch.justify-content-center
          .card.mb-4(style='max-width: 940px;')
            .row.no-gutters
              .col-md-4
                img(src=book.picture, alt='...')
              .col-md-8
                .card-body
                  h3.card-title=book.title
                  h6.card-subtitle.mb-2.text-muted=book.author
                  .card-text
                    if book.description !== ""
                     blockquote.blockquote.blockquote-green.mb-0
                       p=book.description
                  .card-text
                    .container.mt-4.mb-2
                      .row
                       h6="Precio de Venta: $"+ book.price
                       h6.ml-1.text-danger=" + 45 (Recargo Interior)"

                    if book.wasReleased
                       h6.text-success="Lanzamiento en Argentina: " + book.releaseDate
                    else
                       h6="Lanzamiento en Argentina: " + book.releaseDate

                  .card-footer.text-muted.mb-2
                    h5.my-3="ISBN: " + book.ISBN
                    h5.small.text-muted=book.editorial
